extends layout

block content
  each room in config.rooms
    each light in config.lights
      if light.roomID == room.id
        .mdl-cell.mdl-cell--4-col.mdl-shadow--2dp.mdl-card
          a(href='/light/' + light.id)
            .mdl-card__title.mdl-card--border(id='light-' + light.id) #{room.name} #{light.name}
          ul.mdl-list
            li.mdl-list__item
              span.mdl-list__item-primary-content
                i.material-icons lightbulb_outline
                ='All Lights'
              span.mdl-list__item-secondary-action
                label.mdl-switch.mdl-js-switch.mdl-js-ripple-effect(for="switch-" + light.id)
                  input.mdl-switch__input(type="checkbox", id="switch-" + light.id)
            li.mdl-list__item
              span.mdl-list__item-primary-content
                i.material-icons brightness_medium
                ='Brightness'
              span.mdl-list__item-secondary-action
                input.mdl-slider.mdl-js-slider(type="range", min="0", max="100", value="0", tabindex="0", id="slider-" + light.id)
