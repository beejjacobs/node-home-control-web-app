extends layout

block content
  each floor in config.floors
    .mdl-cell.mdl-cell--4-col.mdl-shadow--2dp.mdl-card
      .mdl-card__title.mdl-card--border(id='floor-' + floor.id) #{floor.name}
      ul.mdl-list
        li.mdl-list__item
          span.mdl-list__item-primary-content
            i.material-icons lightbulb_outline
            ='All Lights'
          span.mdl-list__item-secondary-action
            label.mdl-switch.mdl-js-switch.mdl-js-ripple-effect(for="switch-" + floor.id)
              input.mdl-switch__input(type="checkbox", id="switch-" + floor.id)
        li.mdl-list__item
          span.mdl-list__item-primary-content
            i.material-icons brightness_medium
            ='Brightness'
          span.mdl-list__item-secondary-action
              input.mdl-slider.mdl-js-slider(type="range", min="0", max="100", value="0", tabindex="0", id="slider-" + floor.id)