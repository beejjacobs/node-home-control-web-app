extends layout

block content
  each room in config.rooms
    .mdl-cell.mdl-cell--4-col.mdl-shadow--2dp.mdl-card
      a(href='/room/' + room.id)
        .mdl-card__title.mdl-card--border(id='room-' + room.id) #{room.name}
          .mdl-layout-spacer
          .mdl-button.mdl-js-button.mdl-button--fab.mdl-button--mini-fab.mdl-js-ripple-effect.mdl-button--colored
            i.material-icons arrow_forward
      ul.mdl-list
        li.mdl-list__item
          span.mdl-list__item-primary-content
            i.material-icons lightbulb_outline
            ='Power'
          span.mdl-list__item-secondary-action
            label.mdl-switch.mdl-js-switch.mdl-js-ripple-effect(for="switch-" + room.id)
              input.mdl-switch__input(type="checkbox", id="switch-" + room.id)
        li.mdl-list__item
          span.mdl-list__item-primary-content
            i.material-icons brightness_medium
            ='Brightness'
          span.mdl-list__item-secondary-action
            input.mdl-slider.mdl-js-slider(type="range", min="0", max="100", value="0", tabindex="0", id="slider-" + room.id)